<%= form_for @photo, :html => { :multipart => true } do |f| %>

<% if @photo.errors.any? %>
	<div class="alert alert-warning">
		<ul>
			<% @photo.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<p>
	<%= f.label :nome, 'ReferÃªncia da Imagem' %>
	<%= f.text_field :title %>
</p>
<% if @photo.photo? %>
	<p>
		<label>Foto atual</label>
		<%= image_tag @photo.photo.url(:thumb) %>
	</p>
<% end %>
<p>
	<%= f.label :imagem %>
	<%= f.file_field :photo %>
</p>
<div class="form-action">
	<% if @photo.new_record? %> 
		<%= f.submit "Cadastrar Imagem", :class => "button button-primary"  %>
	<% else %>
		<%= f.submit "Editar Imagem", :class => "button button-primary"  %>
	<% end %>
	<%= link_to 'Voltar para listagem', photos_path, :class => "button button-link" %>
</div>

<% end %>

